{
  "name": "@amzn/brazil",
  "version": "2.0.7",
  "description": "Utilities for npm packages in Brazil.",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "ssh://git.amazon.com/pkg/NodeJS-Brazil"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "generate-coverage-data": "dist/bin/generate-coverage-data.js"
  },
  "files": [
    "dist/*",
    "!dist/**/__tests__"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "prettier --list-different --cache .",
    "lint:fix": "prettier --write .",
    "build": "tsc",
    "test": "jest",
    "posttest": "ts-node ./src/bin/generate-coverage-data",
    "release": "npm run build && npm run test && npm run lint ",
    "prepublishOnly": "npm run release"
  },
  "dependencies": {
    "commander": "^9.4.0",
    "fs-extra": "^10.1.0"
  },
  "devDependencies": {
    "@amzn/eslint-config-code-foundations": "^1.0.0-beta.7",
    "@tsconfig/node14": "^14.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.4",
    "@types/node": "^14.18.31",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "npm-pretty-much": {
    "publishLibCommonJs": true,
    "runTest": "never",
    "runRelease": "never"
  }
}
